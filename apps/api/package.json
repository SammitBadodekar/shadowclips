{
  "name": "temporal-hello-world",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc --build",
    "build.watch": "tsc --build --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "worker": "ts-node src/worker.ts",
    "worker.watch": "nodemon src/worker.ts",
    "server": "ts-node src/api/server.ts",
    "server.watch": "nodemon src/api/server.ts",
    "dev": "concurrently -n \"WORKER,SERVER\" -c \"cyan,green\" \"npm run worker.watch\" \"npm run server.watch\"",
    "worker:prod": "node lib/worker.js",
    "server:prod": "node lib/api/server.js",
    "start": "concurrently -n \"WORKER,SERVER\" -c \"cyan,green\" \"npm run worker:prod\" \"npm run server:prod\""
  },
  "nodemonConfig": {
    "execMap": {
      "ts": "ts-node"
    },
    "ext": "ts",
    "watch": [
      "src"
    ]
  },
  "dependencies": {
    "@hono/node-server": "^1.19.6",
    "@temporalio/activity": "^1.13.2",
    "@temporalio/client": "^1.13.2",
    "@temporalio/envconfig": "^1.13.2",
    "@temporalio/worker": "^1.13.2",
    "@temporalio/workflow": "^1.13.2",
    "@types/fluent-ffmpeg": "^2.1.28",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "fluent-ffmpeg": "^2.1.3",
    "hono": "^4.10.6",
    "nanoid": "3.x",
    "typescript": "^5.6.3"
  },
  "devDependencies": {
    "@temporalio/testing": "^1.13.2",
    "@tsconfig/node22": "^22.0.0",
    "@types/mocha": "8.x",
    "@types/node": "^22.9.1",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-deprecation": "^3.0.0",
    "mocha": "8.x",
    "nodemon": "^3.1.7",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2"
  }
}